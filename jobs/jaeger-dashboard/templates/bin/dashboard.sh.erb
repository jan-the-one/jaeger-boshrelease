#!/bin/bash

set -e
set -u

source /var/vcap/jobs/jaeger-dashboard/config/export_env.sh

PIDFILE=${RUN_DIR}/dashboard.pid

case ${1} in

  start)
    echo $$ > $PIDFILE

    echo "Starting Jaeger Dashboard"

    exec chpst -u vcap:vcap /var/vcap/packages/jaeger/bin/query-linux-amd64 \
      --log-level=debug \
      >>  $LOG_DIR/jaeger-query.stdout.log \
      2>> $LOG_DIR/jaeger-query.stderr.log
    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE
    ;;

  *)
    echo "Usage: ${0} {start|stop}"
    ;;

esac
