---
name: jaeger-dashboard
packages: 
  - jaeger
templates:
  bin/dashboard.sh.erb: bin/dashboard.sh
  bin/pre-start.sh.erb: bin/pre-start.sh
  config/export_env.sh.erb: config/export_env.sh
#! NOT SURE IF ALL PROPERTIES BELOW ARE USEFUL FOR THE `JAEGER-QUERY` PROCESS.
properties:
  debug-logs:
    description: Whether to enable the `debug` log level.
    default: false
  query.storage-type:
    description: The type of storage backend to store traces in. Supported values are [grpc, cassandra]. `grpc` uses a local in-memory query.
    default: grpc
  query.grpc-storage-server:
    description: The address of the remote storage server. The hostname can only be localhost, whereas the port number can vary.
    default: localhost:17271
  query.grpc-storage-timeout:
    description: The connection timeout for the connection to the storage server.
    default: 10
  query.cassandra.keyspace:
    description: The keyspace for Jaeger data.
  query.cassandra.username:
    description: The username for authentication. This property is mandatory for Cassandra storage.
    default: root
  query.cassandra.password:
    description: The password for authentication. This property is mandatory for Cassandra storage.
    default: pass
  query.cassandra.port:
    description: The port number for the Cassandra connection.
    default: 9042
  query.cassandra.servers:
    description: The list of server nodes for a Cassandra cluster. It can be provided as a comma-separated list.
    default: localhost

  # query.cassandra.tls.ca:
  #   description: Inline TLS CA (Certification Authority) string used to verify the remote server(s).
  # query.cassandra.tls.cert:
  #   description: Inline TLS certificate string, used to identify the collector process to the remote server(s). Must be signed by the CA above.
  # query.cassandra.tls.enabled:
  #   description: Toggle this property to enable/disable TLS for the collector <-> cassandra communication.
  #   default: false
  # query.cassandra.tls.server-name:
  #   description: Override the TLS server name expected in the certificate of the remote server(s).
  #   default: nil